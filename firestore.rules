rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Temporarily allow authenticated users to create user documents
    match /users/{userId} {
      allow read, write, create: if request.auth != null;
    }
    
    // Allow authenticated users to access other documents temporarily
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}